<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<ToolBar xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         fx:controller="com.harmelodic.gamelauncher.ui.ToolbarController"
         fx:id="toolbar" minHeight="50">
    <Label text="Game Launcher" style="-fx-padding: 0 20 0 20; -fx-font-size: 16;"/>
    <TextField promptText="Find a game..."/>
    <Pane fx:id="toolbarSpacer"/>
    <Button fx:id="settings" alignment="CENTER_RIGHT" text="Settings"/>
</ToolBar>
